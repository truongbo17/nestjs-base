{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../views/**/*",
        "outDir": "dist/views"
      },
      {
        "include": "../public/**/*",
        "outDir": "dist/public"
      },
      {
        "include": "../templates/**/*",
        "outDir": "dist/templates"
      },
      {
        "include": "../storage/**/*",
        "outDir": "dist/storage"
      }
    ]
  }
}
